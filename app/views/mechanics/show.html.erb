<h1>Mechanic: <%= @mechanic.name %></h1>
<h2>Years of Experience: <%= @mechanic.experience %></h2>

<div id="current-rides">
  <h3>Current rides they're working on:</h3>
  <% @mechanic.order_name.each do |ride| %>
    <section class="ride">
      <%= ride.name %><br/>
    </section>
  <% end %>
</div>

<h3>Add a ride to workload:</h3>
<%= form_tag "/mechanics/#{@mechanic.id}", method: :post do %>
  <%= label_tag :ride_id %>
  <%= text_field_tag :ride_id %>
  <%= submit_tag "Submit" %>
<% end %>