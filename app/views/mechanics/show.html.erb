<h1>Mechanic: <%= @mechanic.name %></h1>
<h2>Years of Experience: <%= @mechanic.experience %></h2>

<section id="current-rides">
  <h3>Current rides they're working on:</h3>
  <% @mechanic.rides.each do |ride| %>
    <%= ride.name %><br/>
  <% end %>
</section>

<h3>Add a ride to workload:</h3>
<%= form_tag "/mechanics/#{@mechanic.id}" do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <%= label_tag :rating %>
  <%= number_field_tag :rating %>
  <%= submit_tag "Submit" %>
<% end %>